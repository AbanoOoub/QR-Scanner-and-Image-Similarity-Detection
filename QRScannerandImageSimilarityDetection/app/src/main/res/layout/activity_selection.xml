<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context=".activities.sign_in_up_activities.SelectionActivity"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make selection"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text="select which contact detail should we use to reset your password"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="#E9EBEB"
            >
            <ImageView
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:src="@drawable/mobile"
                android:layout_marginRight="20sp"
                android:id="@+id/mobile_icon">
            </ImageView>
            <TextView
                android:id="@+id/mobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mobile_icon"
                android:text="Via sms"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="30dp"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/mobile_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_below="@id/mobile_txt"
                android:text="+0201858683855"
                android:textSize="20sp" />
            <Button
                android:id="@+id/vrify_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="#E9EBEB"
            >
            <ImageView
                android:layout_height="80dp"
                android:layout_width="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/mail"
                android:layout_marginRight="20sp"
                android:id="@+id/mail_icon">
            </ImageView>
            <TextView
                android:id="@+id/mail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@id/mail_icon"
                android:text="Via sms"
                android:layout_marginTop="30dp"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/mail_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_below="@id/mail_txt"
                android:text="omnia@gmail.com"
                android:textSize="20sp" />
            <Button
                android:id="@+id/vrify_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
