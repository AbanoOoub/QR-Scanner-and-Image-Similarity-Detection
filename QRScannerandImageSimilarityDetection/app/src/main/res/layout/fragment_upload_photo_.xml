<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Upload_photo_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/uploadfrag_ItmImg"
            android:layout_width="167dp"
            android:layout_height="164dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="118dp"
            tools:src="@android:drawable/btn_star_big_on" />

        <Spinner
            android:id="@+id/UploadFrag_Categ_spinner"
            android:layout_width="377dp"
            android:layout_height="63dp"
            android:layout_below="@+id/uploadfrag_ItmImg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:entries="@array/ItemCategories"
            android:popupBackground="@color/colorPrimary"
            android:theme="@style/spinnerTheme" />

        <ListView
            android:id="@+id/cutting_imgs_lst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_crop_image"
            android:layout_below="@+id/UploadFrag_Categ_spinner"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/btn_crop_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"

            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=" Crop Image Manually "
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>
</FrameLayout>