<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.Reminder_Item_Fragment">

    <ImageView
        android:id="@+id/addObject"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/add" />

    <EditText
        android:id="@+id/addObject_field"
        android:layout_width="239dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundededittext"
        android:ems="10"
        android:hint="Enter name of your objects.."
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="374dp"
        android:layout_height="385dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="117dp" />

    <TextView
        android:id="@+id/settimeText"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="149dp"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary"
        android:text="Set your return time." />

    <Button
        android:id="@+id/button"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/roundedbutton"
        android:text="Save" />

    <TextView
        android:id="@+id/settime"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="138dp"
        android:drawableTop="@drawable/time" />
</RelativeLayout>