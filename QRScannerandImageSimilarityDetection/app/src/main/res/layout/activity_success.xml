<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activities.sign_in_up_activities.SuccessActivity">

    <TextView
        android:id="@+id/success_message_title"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="password updated"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#185ED3"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/success_message_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/success" />

    <TextView
        android:id="@+id/success_message_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="your password has been updated"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16sp" />
    <Button
        android:id="@+id/success_message_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_shapes"
        android:text="login"
        android:textColor="#fff" />

</LinearLayout>